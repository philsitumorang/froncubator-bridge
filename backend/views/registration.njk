{% extends './noauth-layout.njk' %}

{% block content %}
<div class="auth-page">
    <div class="bg-reg"></div>
    <div class="bg-logo-wrapper">
        <div class="bg-logo"></div>
        <div class="f-logo"></div>
    </div>
    <div class="form-auth">
        <div class="f-form">
            <form action="/admin/create" method="post">
                <div class="form-group">
                    <h1>Create superadmin</h1>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" value="">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" autocomplete="new-password" name="password" value="">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" autocomplete="new-password" name="confirm-password" value="">
                </div>
                <div class="form-group form-controls text-center">
                    <button type="submit" class="btn btn-primary">create</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}